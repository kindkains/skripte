#!/bin/bash
clear

check=1

while [ $check = 1 ]; do
	if [ -n "$error" ]; then
		echo -e "\033[31m$error\033[0m"
	fi

	echo
	echo "1: Start Tailscale"
	echo "2: Stop Tailscale"
	echo "3: Login Tailscale"
	echo "4: Logout Tailscale"
	echo "5: Tailscale Status"
	echo "6: Tailscale installieren"
	echo "7: Tailscale deinstallieren"
	echo
	read -p "Eingabe: " cmd
	cmd=${cmd,,}

	case $cmd in

		1)
			echo 
			sudo tailscale up --accept-routes
			check=0
			;;
		2)
			echo
			sudo tailscale down
			check=0
			;;
		3)
			echo
			sudo tailscale login
			check=0
			;;
		4)
			echo
			sudo tailscale logout
			check=0
			;;
		5)
			echo
			sudo tailscale status
			check=0
			;;
		6)
			echo
			sudo curl -fsSL https://tailscale.com/install.sh | sh
			check=0
			;;
		7)
			echo
			REMOVE=$(dpkg -l | grep tailscale | awk '{print $2}'); sudo apt-get remove --purge $REMOVE
			check=0
			;;
		quit)
			echo
			echo "Programm wird beendet"
			echo
			exit 0;
			;;
		exit)
			echo
			echo "Programm wird beendet"
			echo
			exit 0;
			;;
		*)
			echo
			error='Fehlerhafte Eingabe - Bitte 1, 2 oder 3 w√§hlen'
			check=1
		esac
	done


echo Fertig
exit 0;
